server {
    listen 80;
    server_name {{ subdomain | default('') ~ (subdomain | length > 0) | ternary('.', '') }}{{ project_domain }};
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl;
    server_name {{ subdomain | default('') ~ (subdomain | length > 0) | ternary('.', '') }}{{ project_domain }};

    ssl_certificate /etc/letsencrypt/live/{{ subdomain | default('') ~ (subdomain | length > 0) | ternary('.', '') }}{{ project_domain }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ subdomain | default('') ~ (subdomain | length > 0) | ternary('.', '') }}{{ project_domain }}/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    location / {
        proxy_pass http://localhost:{{ port }};
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
